<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/actionBarPurple</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/actionBarPurple</item>
        <item name="android:textColor">@color/actionBarPurple</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>