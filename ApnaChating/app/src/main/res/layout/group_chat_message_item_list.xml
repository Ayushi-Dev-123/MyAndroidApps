<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/leftRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/chat_receiver_decorator"
        android:visibility="invisible"
         >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/civUser"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Friend Message Time"
            android:id="@+id/tvFriendMessageTime"
            android:textSize="10sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/civUser"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend Message"
            android:textColor="@color/actionBarPurple"
            android:id="@+id/tvFriendMessage"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_below="@+id/tvFriendMessageTime"
            />
        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_below="@+id/tvFriendMessageTime"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rightRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:visibility="invisible"
        android:background="@drawable/button_decorator"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMyMessageTime"
            android:textColor="@color/white"
            android:text="My Message Time"
            android:textStyle="bold"
            android:textSize="10sp"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Message"
            android:textColor="@color/white"
            android:id="@+id/tvMyMessage"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_below="@+id/tvMyMessageTime"
            />
        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_below="@+id/tvMyMessageTime"
            />
    </RelativeLayout>
</RelativeLayout>