<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".OtherActivity" >
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#3DB342"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:id="@+id/btnOther"/>

    <Button
        android:id="@+id/btnCamera"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#3DB342"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:layout_below="@+id/btnOther"/>

    <Button
        android:id="@+id/btnDialer"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#3DB342"
        android:layout_below="@+id/btnCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialer"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"/>

    <Button
        android:id="@+id/btnActionCall"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#3DB342"
        android:layout_below="@+id/btnDialer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="Action Call"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnActionCall"
        android:text="Gallary"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#3DB342"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:id="@+id/btnGallary"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#3DB342"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:layout_below="@id/btnGallary"
        android:id="@+id/btnGoogle"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@id/btnGoogle"/>

</RelativeLayout>