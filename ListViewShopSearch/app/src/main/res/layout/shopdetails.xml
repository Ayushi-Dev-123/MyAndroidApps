<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="1"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tvshop"
                android:layout_width="50dp"
                android:layout_height="47dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="30dp"
                android:drawableLeft="@drawable/shop"
                android:drawablePadding="60dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shop Now"
                android:textSize="12sp"
                android:id="@+id/tvshopnow"
                android:layout_below="@+id/tvshop"
                android:paddingLeft="20dp"
                android:textColor="#E1857E7E"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ShopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="Shop Name"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ShopAddress"
                android:layout_below="@+id/ShopName"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="Shop Address"
                android:textColor="#B8B4B4"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ShopAddress"
                android:layout_marginTop="30dp"
                android:textColor="#D3F45A"
                android:drawableLeft="@drawable/location"
                android:id="@+id/location"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/star"
                android:id="@+id/tvstar"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tvarrow"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="90dp"
                android:drawableRight="@drawable/arrow_right" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>